#include <stdio.h>
#include <string.h>

void sortString(char s[]) {
    int len = strlen(s);
    for (int i = 0; i < len - 1; i++) {
        for (int j = i + 1; j < len; j++) {
            if (s[i] < s[j]) {
                char temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
}

void findRepeatedIndices(char s[]) {
    int len = strlen(s);
    int printed = 0;
    for (int i = 0; i < len; i++) {
        if (i < len - 1 && s[i] == s[i + 1]) {
            if (printed) printf(",");
            printf("%d", i);
            printed = 1;
        }
    }
}

int main() {
    char s[100];
    
    strcpy(s, "tree");

    sortString(s);
    printf("%s, starting index: ", s);
    findRepeatedIndices(s);
    printf("\n");

    strcpy(s, "kkj");

    sortString(s);
    printf("%s, starting index: ", s);
    findRepeatedIndices(s);
    printf("\n");

    strcpy(s, "cccaaa");

    sortString(s);
    printf("%s, starting index: ", s);
    findRepeatedIndices(s);
    printf("\n");

    strcpy(s, "Aabb");

    sortString(s);
    printf("%s, starting index: ", s);
    findRepeatedIndices(s);
    printf("\n");

    return 0;
}
